<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout

        android:id="@+id/gridNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"

        android:layout_marginRight="8dp"
        android:columnCount="4"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imgDiscSR"
            android:layout_width="32sp"

            android:layout_height="32sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center|fill"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ic_app" />

        <TextView
            android:id="@+id/txtDataS"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/txtData"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPtsS"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/txtPts"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgAPRE"
            android:layout_width="32sp"

            android:layout_height="32sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center|fill"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ic_finish_line" />

        <ProgressBar
            android:id="@+id/progress_sr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"

            android:layout_row="1"
            android:layout_columnSpan="4"
            android:layout_columnWeight="4"
            android:layout_gravity="fill"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"


            android:max="100"
            android:progress="70" />
    </GridLayout>


</LinearLayout>
